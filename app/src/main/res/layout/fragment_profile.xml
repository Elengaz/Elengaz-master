<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.github.florent37.diagonallayout.DiagonalLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        app:diagonal_angle="0"
        app:diagonal_position="bottom"
        app:diagonal_direction="left">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/pic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/back"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/btn3"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civProfilePic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/pic"
                        android:layout_gravity="center"
                        app:civ_border_color="#fff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:civ_border_width="3dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:drawablePadding="24dp"
                            android:gravity="center"
                            android:id="@+id/txt_Officcer_name"
                            android:textSize="20sp"
                            android:textColor="#fff" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:drawablePadding="24dp"
                            android:gravity="center"

                            android:id="@+id/txt_Officcer_phone"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textColor="#fff" />


                        <LinearLayout
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layoutDirection="ltr"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
android:drawableLeft="@drawable/email"
                                android:textColor="#fff" />
                            <TextView
                                android:id="@+id/txt_city"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textColor="#fff"
                                android:textSize="16sp"

                              android:drawableLeft="@drawable/map"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:id="@+id/txt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:drawableLeft="@drawable/map"
                                android:textSize="16sp"

                                android:textColor="#fff"

                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/rc"
                            android:padding="10dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="اجمالي سعر الخدمات"
                                    android:padding="5dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:background="@color/colorPrimary"
                                    />
                                <TextView
                                    android:id="@+id/total_service_cost"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:background="@color/white"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_marginTop="2dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="المتبقي"
                                    android:padding="5dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:background="@color/colorPrimary"
                                    />
                                <TextView
                                    android:id="@+id/total_service_done"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:background="@color/white"
                                    />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <Button
                                android:id="@+id/btnupdate"
                                android:layout_width="180dp"
                                android:layout_height="40dp"
                                android:paddingStart="10dp"
                                android:paddingRight="10dp"
                                android:paddingEnd="10dp"
                                android:background="@drawable/message_button"
                                android:textColor="#fff"
                                android:text="@string/update"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="5dp"
                                />

                            <Button
                                android:id="@+id/btnpass"
                                android:layout_width="180dp"
                                android:layout_height="40dp"

                                android:background="@drawable/message_button"
                                android:textColor="#fff"
                                android:text="@string/update_password"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"

                                android:layout_marginBottom="5dp"
                                />

                        </LinearLayout>
                        <Button
                            android:id="@+id/btnlogout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginBottom="16dp"
                            android:paddingStart="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:paddingEnd="10dp"
                            android:background="@drawable/log"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="@string/logout"
                            android:layout_marginTop="20dp"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"/>


                        <TextView
                            android:id="@+id/tvSummary"
                            android:layout_width="wrap_content"
                            android:textColor="#fff"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:lines="2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:text="@string/profiledescreption"                    android:textSize="14sp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif-medium"/>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </com.github.florent37.diagonallayout.DiagonalLayout>

</RelativeLayout>
</ScrollView>
