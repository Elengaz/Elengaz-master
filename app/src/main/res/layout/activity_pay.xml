<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layoutDirection="rtl"

    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:text="@string/pay"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/backsearch"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#cc4d4747"
                    android:layout_gravity="right"
                    android:textSize="17dp"
                    android:padding="5dp"
                    android:layout_margin="7dp"
                    android:text="@string/trans_name"
                    />
                <EditText
                    android:id="@+id/edt_trans_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#cc4d4747"
                    android:layout_gravity="right"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/backsearch"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="#cc4d4747"
                    android:layout_gravity="right"
                    android:textSize="17dp"
                    android:layout_margin="7dp"
                    android:gravity="center_vertical"
                    android:text="@string/trans_date"/>
                <TextView
                    android:id="@+id/edt_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#cc4d4747"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <Button
                    android:id="@+id/add_date"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimary"
                    android:text="@string/add_date"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/backsearch"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"


                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#cc4d4747"
                    android:layout_gravity="right"
                    android:textSize="17dp"
                    android:layout_margin="7dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="@string/trans_cost"/>
                <EditText
                    android:id="@+id/edt_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#cc4d4747"
                    android:layout_gravity="left"
                    android:textSize="15dp"
                    />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/backsearch"

                >

            <TextView
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cc4d4747"
                android:layout_margin="7dp"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/trans_image"/>

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/upload_img"
                    android:textColor="#fff"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"

                    />

                <ImageView
                    android:id="@+id/trans_photo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/btn_upload"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/trans"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trans_confirm"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:background="@drawable/btn2"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>